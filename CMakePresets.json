{
    "version": 6,
    "configurePresets": [
        {
            "hidden": true,
            "name": "common",
            "description": "Sets Ninja generator and build + install directory",
            "binaryDir": "${sourceDir}/build",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${presetName}",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "arm-gcc",
            "hidden": true,
            "inherits": "common",
            "description": "Sets arm-none-eabi toolchain",
            "toolchainFile": "${sourceDir}/cmake/arm-toolchain.cmake",
            "cacheVariables": {
                "CMAKE_C_COMPILER_WORKS": true,
                "CMAKE_CXX_COMPILER_WORKS": true
            }
        },
        {
            "name": "Debug",
            "inherits": "arm-gcc",
            "displayName": "ARM-GCC Debug Configure",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release",
            "inherits": "arm-gcc",
            "displayName": "ARM-GCC Release Configure",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "RelWithDebInfo",
            "inherits": "arm-gcc",
            "displayName": "ARM-GCC RelWithDebInfo Configure",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        }
    ]
}